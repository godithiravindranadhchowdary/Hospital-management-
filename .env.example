# Django Secret Key - REQUIRED for production
# Generate a secure key using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-this

# Debug mode - Set to 'False' in production
DJANGO_DEBUG=True

# Database Configuration
# For SQLite (default)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# For PostgreSQL (production) - Uncomment and configure
# DATABASE_URL=postgres://user:password@host:port/database

# JWT Configuration (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
